    dct:modified  "2022-06-16" ;
    dct:description """SHACL model to validate/describe the structure of achive objects."""@en ;
    dct:description """Modèle SHACL pour valider/décrire des objets."""@fr ;
    dct:description """SHACL-model voor het valideren/beschrijven de structuur van archiefobjecten."""@nl .

haObj:ObjectShape a sh:NodeShape ;
  sh:targetClass premis:Object ;
  sh:property [
    sh:path premis:relationship ;
    sh:class premis:Object ;

    sh:description "Een generieke relatie tussen intellectuele entiteiten, files, of representaties."@nl ;

    sh:severity sh:Violation ;
  ].

haObj:IntellectualEntityShape a sh:NodeShape ;
  sh:targetClass premis:IntellectualEntity ;
  sh:property [
    sh:path rel:hsp ;
    sh:class premis:IntellectualEntity ;

    sh:description "Een intellectuele entiteit die deel uit maakt van deze intellectuele entiteit."@nl ;

    sh:severity sh:Violation ;
  ],[
    sh:path rel:isp ;
    sh:class premis:IntellectualEntity ;

    sh:description "De intellectuele entiteit waarvan deze intellectuele entiteit deel uit maakt."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path rel:isr ;
    sh:class premis:Representation ;

    sh:description "Een representatie van de intellectuele entiteit."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path haObj:hasMaster ;
    sh:maxCount 1 ;
    sh:class haObj:DigitalRepresentation ;

    sh:description "De archiefmaster van de intellectuele entiteit."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path haObj:hasMezzanine ;
    sh:maxCount 1 ;
    sh:class haObj:DigitalRepresentation ;

    sh:description "De mezzanine representatie van de intellectuele entiteit."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path haObj:hasAccesscopy ;
    sh:class haObj:DigitalRepresentation ;

    sh:description "De toegangs- of inkijk kopie van de intellectuele entiteit. "@nl ;

    sh:severity sh:Violation ;
  ].

 haObj:DigitalRepresentationShape a sh:NodeShape ;
  sh:targetClass haObj:DigitalRepresentation ;
  sh:property  [
    sh:path haObj:isMasterOf ;
    sh:minCount 1 ;
    sh:class premis:IntellectualEntity ;

    sh:description "De intellectuele entiteit waarvan deze representatie de archiefmaster is."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path haObj:isMezzanineOf ;
    sh:maxCount 1 ;
    sh:class premis:IntellectualEntity ;

    sh:description "De intellectuele entiteit waarvan deze representatie de mezzanine is."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path haObj:isAccesscopyOf ;
    sh:maxCount 1 ;
    sh:class premis:IntellectualEntity ;

    sh:description "De intellectuele entiteit waarvan deze representatie de toegangs- of inkijk kopie is."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path rel:rep ;
    sh:minCount 1 ;
    sh:class premis:IntellectualEntity ;

    sh:description "De intellectuele entiteit die deze representatie representeert."@nl ;

    sh:severity sh:Violation ;
  ],
  [
    sh:path rel:inc ;
    sh:minCount 1 ;
    sh:class premis:File ;

    sh:description "Een bestand die deel uit maakt van deze representatie"@nl ;

    sh:severity sh:Violation ;
  ].

 haObj:FileShape a sh:NodeShape ;
  sh:targetClass premis:File ;
    sh:property [
        sh:path rel:isi;
        sh:class haObj:DigitalRepresentation ;
        sh:minCount 1 ;
        sh:description "De representatie waarvan dit bestand deel van uitmaakt."@nl ;
    
        sh:severity sh:Violation ;
    ],
    [
        sh:path premis:fixity;
        sh:class premis:Fixity ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:description "De berekende fixity checksum van het bestand."@nl ;
    
        sh:severity sh:Violation ;
    ],
    [
        sh:path premis:storedAt;
        sh:class premis:StorageLocation ;
        sh:minCount 1 ;
        sh:description "De locatie waar het bestand is opgeslagen."@nl ;
    
        sh:severity sh:Violation ;
    ],
    [
        sh:path premis:format;
        sh:class haObj:FileFormat ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:description "Het bestandsformaat."@nl ;
    
        sh:severity sh:Violation ;
    ].


haObj:FixityShape a sh:NodeShape ;
  sh:targetClass premis:Fixity ;
    sh:property [
        sh:path rdf:value;
        sh:datatype xsd:string;
        sh:minCount 1 ;
        sh:name "fixity checksum"@nl;
        sh:description "De waarde van de checksum."@nl ;
    
        sh:severity sh:Violation ;
    ],
    [
        sh:path dct:creator;
        sh:datatype xsd:string;
        sh:name "maker"@nl;
        
        sh:description "De entiteit die de checksum gegenereerd heeft."@nl ;
    
        sh:severity sh:Violation ;
    ].

haObj:StorageLocationShape a sh:NodeShape ;
  sh:targetClass premis:StorageLocation ;
    sh:property [
        sh:path rdf:value;
        sh:datatype xsd:string;
        sh:minCount 1 ;
        sh:name "opslagpad"@nl ;
        sh:name "file path"@en ;
        sh:description "Het pad van de opslaglocatie."@nl ;
    
        sh:severity sh:Violation ;
    ],
    [
        sh:path premis:medium;
        sh:class premis:StorageMedium ;
        sh:description "De entiteit die de checksum gegenereerd heeft."@nl ;
    
        sh:severity sh:Violation ;
    ].
  